{
  "app": {
    "name": "Edux",
    "service": "edux-modular-monolith",
    "instance": "1.0",
    "version": "1.0"
  },
  "auth": {
    "IssuerSigningKey": "ubeeg2aigeiDongei1Ni3oel5az2oes0vohd6ohweiphboyahP",
    "issuer": "edux",
    "validIssuer": "edux",
    "validateAudience": false,
    "validateIssuer": true,
    "validateLifetime": true,
    "expiry": "10:00:00",
    "authenticationDisabled": false,
    "apiKey": "6CBxzdYcEgNDrRhMbDpkBF7e4d4Kib46dwL9ZE5egiL0iL5Y3dzREUBSUYVUwUkN"
  },
  "sqlserver": {
    "connectionString": "Server=localhost;Database=edux;User Id=sa;Password=Password123;TrustServerCertificate=True;"
  },
  "rabbitMq": {
    "connectionName": "edux",
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true
    },
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestedConnectionTimeout": "00:00:30",
    "requestedHeartbeat": "00:01:00",
    "socketReadTimeout": "00:00:30",
    "socketWriteTimeout": "00:00:30",
    "continuationTimeout": "00:00:20",
    "handshakeContinuationTimeout": "00:00:10",
    "networkRecoveryInterval": "00:00:05",
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "edux"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false,
      "template": "edux/{{exchange}}.{{message}}"
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    },
    "deadLetter": {
      "enabled": true,
      "prefix": "dlx-",
      "declare": true
    },
    "spanContextHeader": "span_context"
  },
  "outbox": {
    "enabled": true,
    "type": "sequential",
    "intervalMilliseconds": 60000,
    "outboxCleanupIntervalMilliseconds": 120000
  },
  "inbox": {
    "enabled": true,
    "cleanupIntervalInHours": 6
  },
  "logger": {
    "level": "information",
    "excludePaths": [ "/", "/ping", "/metrics" ],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "console": {
      "enabled": true
    },
    "elk": {
      "enabled": false,
      "url": "http://localhost:9200"
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "apiKey": "zthuXurg1pBET2LIUOFI"
    },
    "tags": {}
  },
  "vault": {
    "enabled": false,
    "url": "http://localhost:8200",
    "authentication": {
      "type": "token",
      "token": {
        "token": "secret"
      }
    }
  },
  "redis": {
    "connectionString": "localhost",
    "instance": "edux",
    "authentication": {
      "type": "token",
      "token": {
        "token": "secret"
      },
      "userPass": {
        "userName": "user",
        "password": "secret"
      }
    }
  },
  "metrics": {
    "enabled": true,
    "endpoint": "metrics",
    "exporter": "prometheus"
  },
  "mailkit": {
    "smtpHost": "smtp.gmail.com",
    "port": "465",
    "username": "",
    "password": "",
    "email": ""
  },
  "signalr": {
    "backplane": "redis"
  },
  "rateLimiting": {
    "permitLimit": 1,
    "windowInSeconds": 5,
    "queueLimit": 0
  }
}
